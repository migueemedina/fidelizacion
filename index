    <script>
        // --- LÓGICA JAVASCRIPT ---

        const xpBar = document.getElementById('xp-bar-fill');
        const rewardPopup = document.getElementById('reward-popup');
        let hasRewarded = false; // Flag para asegurar que solo premiamos una vez

        window.addEventListener('scroll', () => {
            // 1. Calcular altura total del documento
            const scrollTop = window.scrollY;
            const docHeight = document.body.scrollHeight - window.innerHeight;
            
            // 2. Calcular porcentaje de scroll (0 a 100)
            const scrollPercent = (scrollTop / docHeight) * 100;

            // 3. Actualizar la barra visualmente
            xpBar.style.height = scrollPercent + '%';

            // 4. Lógica de "Completado"
            // Activamos al 98% para asegurar que salte aunque el usuario no toque el fondo exacto
            if (scrollPercent >= 98 && !hasRewarded) {
                triggerReward();
            }
        });

        function triggerReward() {
            hasRewarded = true;
            
            // Mostrar animación
            rewardPopup.classList.add('show-reward');

            // SONIDO (Opcional - Los navegadores bloquean audio automático a veces)
            // const audio = new Audio('levelup.mp3');
            // audio.play();

            // Aquí harías la llamada a tu Backend para guardar los puntos reales
            console.log("¡API Call! Usuario ID: 123 ganó 500XP");
        }
    </script>
